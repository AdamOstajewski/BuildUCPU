        // Ładowanie kategorii
        function loadCategories(selector) {
            categories.forEach(category => {
                const option = document.createElement('option');
                option.value = category.id;
                option.textContent = category.name;
                selector.appendChild(option);
            });
        }

        // Ładowanie podzespołów na podstawie wybranej kategorii
        function loadComponents(categorySelector, componentSelector, detailsContainer) {
            categorySelector.addEventListener('change', () => {
                const categoryId = categorySelector.value;
                componentSelector.innerHTML = '<option value="">Wybierz podzespół</option>';
                detailsContainer.innerHTML = '';

                if (components[categoryId]) {
                    components[categoryId].forEach(component => {
                        const option = document.createElement('option');
                        option.value = component.id;
                        option.textContent = component.name;
                        componentSelector.appendChild(option);
                    });
                }
            });

            componentSelector.addEventListener('change', () => {
                const componentId = componentSelector.value;
                const categoryId = categorySelector.value;
                const component = components[categoryId]?.find(c => c.id == componentId);

                if (component) {
                    detailsContainer.innerHTML = `
                        <table>
                            <tr><th>Producent</th><td>${component.producer}</td></tr>
                            <tr><th>Model</th><td>${component.model}</td></tr>
                            <tr><th>Cena</th><td>${component.price}</td></tr>
                            <tr><th>Wydajność</th><td>${component.performance}</td></tr>
                            <tr><th>Kompatybilność</th><td>${component.compatibility}</td></tr>
                        </table>
                    `;
                } else {
                    detailsContainer.innerHTML = '';
                }
            });
        }

