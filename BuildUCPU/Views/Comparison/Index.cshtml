        // Ładowanie kategorii
        function loadCategories(selector) {
            categories.forEach(category => {
                const option = document.createElement('option');
                option.value = category.id;
                option.textContent = category.name;
                selector.appendChild(option);
            });
        }

        // Ładowanie podzespołów na podstawie wybranej kategorii
        function loadComponents(categorySelector, componentSelector, detailsContainer) {
            categorySelector.addEventListener('change', () => {
                const categoryId = categorySelector.value;
                componentSelector.innerHTML = '<option value="">Wybierz podzespół</option>';
                detailsContainer.innerHTML = '';

                if (components[categoryId]) {
                    components[categoryId].forEach(component => {
                        const option = document.createElement('option');
                        option.value = component.id;
                        option.textContent = component.name;
                        componentSelector.appendChild(option);
                    });
                }
            });

            componentSelector.addEventListener('change', () => {
                const componentId = componentSelector.value;
                const categoryId = categorySelector.value;
                const component = components[categoryId]?.find(c => c.id == componentId);

                if (component) {
                    detailsContainer.innerHTML = `
                        <table>
                            <tr><th>Producent</th><td>${component.producer}</td></tr>
                            <tr><th>Model</th><td>${component.model}</td></tr>
                            <tr><th>Cena</th><td>${component.price}</td></tr>
                            <tr><th>Wydajność</th><td>${component.performance}</td></tr>
                            <tr><th>Kompatybilność</th><td>${component.compatibility}</td></tr>
                        </table>
                    `;
                }
            });
        }

        // Synchronizacja wybranej kategorii między oboma menu
        function syncCategories(sourceSelector, targetSelector) {
            sourceSelector.addEventListener('change', () => {
                targetSelector.value = sourceSelector.value;
                targetSelector.dispatchEvent(new Event('change'));
            });
        }

        // Inicjalizacja
        document.addEventListener('DOMContentLoaded', () => {
            const category1 = document.getElementById('category1');
            const category2 = document.getElementById('category2');
            const component1 = document.getElementById('component1');
            const component2 = document.getElementById('component2');
            const details1 = document.getElementById('details1');
            const details2 = document.getElementById('details2');

            loadCategories(category1);
            loadCategories(category2);

            loadComponents(category1, component1, details1);
            loadComponents(category2, component2, details2);

            // Synchronizacja między kategoriami
            syncCategories(category1, category2);
            syncCategories(category2, category1);
        });
