<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuildUCPU</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuildUCPU.styles.css" asp-append-version="true" />
    <style>
        /* Ustawienia globalne */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: rgba(0, 86, 179, 1);
        }

        .navbar-brand {
            color: white;
            font-size: 42px;
            font-weight: bold;
            -webkit-text-stroke-width: 1px;
            -webkit-text-stroke-color: black;
        }

        .navbar-nav {
            display: flex;
            justify-content: center; /* Centralizacja elementów w poziomie */
            align-items: center; /* Wyrównanie elementów w pionie */
            height: 100%; /* Dla wyrównania pionowego */
        }

            .navbar-nav .nav-item {
                text-align: center; /* Centralizacja tekstu wewnątrz elementu */
            }

        .nav-link {
            color: white !important;
            margin-right: 15px;
        }

        .nav-but1 {
            display: flex;
            flex-direction: column;
        }

            .nav-but1 .nav-link {
                background-color: rgba(253, 121, 0, 1);
                color: white;
                border: 1px solid #FD7900;
                border-radius: 20px; /* Zwiększenie promienia zaokrąglenia */
                padding: 10px 20px;
                margin: 5px 0;
                text-align: center;
                transition: background-color 0.3s, color 0.3s;
                width: 160px; /* Zwiększenie szerokości przycisku */
                display: inline-block; /* Zapewnienie, że szerokość i padding działają poprawnie */
            }

                .nav-but1 .nav-link:hover {
                    background-color: rgba(253, 121, 0, 0.8);
                    color: white;
                }

        /* Nowe style dla BuildU i CPU */
        .navbar-section {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .navbar-section .navbar-brand {
                margin-bottom: 0;
            }

        /* Ustawienia dla main i footer */
        .container {
            flex: 1; /* Zajmuje dostępne miejsce */
        }

        footer {
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom" style="min-width: 100%;">
            <div class="container-fluid">
                <!-- Nowa sekcja dla BuildU i CPU -->
                <div class="navbar-section">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BuildU</a>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CPU</a>
                </div>
                <!-- Przycisk do rozwijania -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item nav-item-margin">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item nav-item-margin">
                            <a class="nav-link" asp-area="" asp-controller="Components" asp-action="Index">Lista Podzespołów</a>
                        </li>
                        <li class="nav-item nav-item-margin">
                            <a class="nav-link" asp-area="" asp-controller="Compatibility" asp-action="Index">Kompatybilność</a>
                        </li>
                        <li class="nav-item nav-item-margin">
                            <a class="nav-link" asp-area="" asp-controller="Comparison" asp-action="Index">Porównanie</a>
                        </li>
                        <li class="nav-item nav-item-margin">
                            <a class="nav-link" asp-area="" asp-controller="ReadySets" asp-action="Index">Gotowe Zestawy</a>
                        </li>
                        <li class="nav-but1">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Kontakt</a>
                            <a class="nav-link" asp-area="" asp-controller="News" asp-action="Index">Nowosci</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            <a asp-area="" asp-controller="About" asp-action="Index">O nas</a>
            <a asp-area="" asp-controller="PrivacyPolicy" asp-action="Index">Polityka Prywatności</a>
            <a asp-area="" asp-controller="TermsOfService" asp-action="Index">Regulamin</a>
            <a asp-area="" asp-controller="Contact" asp-action="Index">Kontakt</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
